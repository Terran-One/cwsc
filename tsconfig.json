{
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "/node_modules/",
    "./src/**/*.test.ts"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2017"
  }
}
